#:kivy 1.11.1
<Root>:
    orientation: 'vertical'
    id: root_box
    swiper_obj: swipe_carousel
    Swiper:
        id: swipe_carousel
        size_hint_y: 0.7
        direction: 'right'
        loop: True
        card_one: card_1
        card_two: card_2
        card_three: card_3
        #on_index: print("ONINDEX!!!")
        Image:
            id: card_1
            source: "pictures/frame_nobg.png"
        Image:
            id: card_2
            source: 'pictures/herbert_george_wells.jpg'
        Image:
            id: card_3
            source: 'pictures/frame.png'
    RelativeLayout:
        size_hint_y: 0.3
        Button:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.25,0.25)
