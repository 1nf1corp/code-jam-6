#:kivy 1.11.1
<CreateProfile>
    ProfileSwiper:
        id: profile_carousel
        direction: "right"
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'My Name is'
                font_size: '30dp'
#                font_name: "rock1.ttf"
            BoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                TextInput:
                    font_size: '30dp'
                    multiline: False
            BoxLayout:
                orientation: 'horizontal'
                padding: '10dp', '50dp'
                spacing: '10dp'
                Button:
                    text: 'Go Back'
                    on_release: root.ids.profile_carousel.load_next()
                Button:
                    text: 'Continue'
                    on_release: root.ids.profile_carousel.load_next()

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "On a clear day you chance upon a crippled juvenile T-Rex.\n its leg trapped in a strange contraption. \nJudging from the bleeding, it will not survive long:"
                font_size: '25dp'
            BoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                ToggleButton:
                    text: 'Use the sharpened rock mercifully ending its life with a quick thrust'
                    group: 'Q1'
                    state: 'down'
                ToggleButton:
                    text: 'Use herbs from your pack to put it to sleep.'
                    group: 'Q1'
                ToggleButton:
                    text: "Do not interfere in the natural evolution of events, but rather take the opportunity to learn \nmore about this species as one day you might face a fight a fully grown one."
                    group: 'Q1'
                ToggleButton:
                    text: 'A4'
                    group: 'Q1'
            BoxLayout:
                orientation: 'horizontal'
                padding: '10dp', '50dp'
                spacing: '10dp'
                Button:
                    text: 'Go Back'
                    on_release: root.ids.profile_carousel.load_previous()
                Button:
                    text: 'Continue'
                    on_release: root.ids.profile_carousel.load_next()

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Profile creation question #2:'
                font_size: '30dp'
            BoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                ToggleButton:
                    text: 'A1'
                    group: 'Q1'
                    state: 'down'
                ToggleButton:
                    text: 'A2'
                    group: 'Q1'
                ToggleButton:
                    text: 'A3'
                    group: 'Q1'
                ToggleButton:
                    text: 'A4'
                    group: 'Q1'
            BoxLayout:
                orientation: 'horizontal'
                padding: '10dp', '50dp'
                spacing: '10dp'
                Button:
                    text: 'Go Back'
                    on_release: root.ids.profile_carousel.load_previous()
                Button:
                    text: 'Continue'
                    # TODO: With this design we only need to valiedate the name. But we need more questions.
                    on_release: root.manager.current = "profile_selection"
