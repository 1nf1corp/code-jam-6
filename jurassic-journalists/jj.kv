<Butt@Button>:    
	width: self.parent.width * 1/10
	height: self.parent.height * 1/10
    size_hint: None, None
	background_color: 0,0,0,0
    on_release: self.parent.typw.text += self.text; self.parent.typw.focus = True
	canvas.before:
	    Color:
		    rgba: (.4,.4,.4,1) if self.state == 'normal' else (0,.7,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: 50,	
<Butt2@Label>
    width: self.parent.width * 1/5
	height: self.parent.height * 1/10
    size_hint: None, None
    #disabled:True
		
