    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'atlas://typewriter/typewriter_base'
    title: ''
    separator_color: 0,0,0,0
	FloatLayout:
		typw: typw
		TextPaper:
		    canvas:
			    Color:
				    rgba: 0,0,0,0
			    Rectangle:
				    pos: 0, 0
					size: self.width, self.height //2 + 125
			id: typw
			source: 'blank.png'
			#pos_hint: {'x': 0.2, 'y':.5}
            pos: self.pos
            size: self.size
			#size_hint: .7, .5
			#allow_stretch: True
			letters: []
			text: ''
			on_text: 
			    self.letters.append(Letter(self.text[-1], 32, '1942.ttf')) if '_' not in self.text[-2:] else self.escaped()
			on_letters: self.update()
		GestureSurface:
            size: self.size
            pos: self.pos
			#on_gesture_complete: typw.text += '_b'
