    #    RoundedRectangle:
    #        pos: self.pos
    #        size: self.size
    #        radius: 5,

<Row1@TypeWriterButton>:
    default_y: .175
    anim_y: .175

<Row2@TypeWriterButton>:
    default_y: .13
    anim_y: .13

<Row3@TypeWriterButton>:
    default_y: .08
    anim_y: .08

