<MainWidget>:
    GridLayout:
        size: root.size
        cols: 3
        spacing: 50
        canvas:
            Rectangle:
                source: './assets/cave.jpg'
                size: self.size
                pos: self.pos

        GridLayout:
            cols: 1
            rows: 4

            CardWidget:
                source: './assets/stone_tablet.png'
            CardWidget:
                source: './assets/stone_tablet.png'
            CardWidget:
                source: './assets/stone_tablet.png'
            CardWidget:
                source: './assets/stone_tablet.png'

        GridLayout:
            cols: 1
            rows: 2

            CardWidget:
                source: './assets/stone_tablet.png'
                text: "This one has a label, the others have empty labels"

                allow_stretch: True
                keep_ratio: False
            CardWidget:
                source: './assets/stone_tablet.png'
                allow_stretch: True
                keep_ratio: False

        BoxLayout:
            cols: 1
            orientation: "vertical"
            spacing: 20

            CardWidget:
                source: './assets/stone_tablet.png'
                allow_stretch: True
                keep_ratio: False

            GridLayout:
                cols: 3
                rows: 2
                spacing: 15

                CardWidget:
                    source: './assets/stone_tablet.png'
                    allow_stretch: True
                    keep_ratio: False
                CardWidget:
                    source: './assets/stone_tablet.png'
                    allow_stretch: True
                    keep_ratio: False
                CardWidget:
                    source: './assets/stone_tablet.png'
                    allow_stretch: True
                    keep_ratio: False
                CardWidget:
                    source: './assets/stone_tablet.png'
                    allow_stretch: True
                    keep_ratio: False
                CardWidget:
                    source: './assets/stone_tablet.png'
                    allow_stretch: True
                    keep_ratio: False
                CardWidget:
                    source: './assets/stone_tablet.png'
                    allow_stretch: True
                    keep_ratio: False

<CardWidget>:
    Image:
        source: root.source
        size:root.size
        pos_hint: {'x': 0, 'y' : 0}
    Label:
        pos:root.pos
        text: root.text
        text_size: (200, None)
        pos_hint: {'x': 0.1, 'y' : 0.25}
