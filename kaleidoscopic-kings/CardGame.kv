########### Setting default font ###########
<Widget>:
    font_name: assets_file+'caveman.ttf'

################## LAYOUT ##################
<MainWidget>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: assets_file+'bg.png'
    orientation: 'vertical'
    cols: 2
    StatusBar:
        size_hint_x: 0.3
    CardWidget
        size_hint_x: 0.7


################## STATUS ##################
<StatusBar@GridLayout>:
    rows: 4
    padding: (40, 180, 40, 75)
    StatusWidget:
        Label:
            text: data.game_state.main_state_1.label
        Label:
            text: data.game_state.main_state_1.value
    StatusWidget:
        Label:
            text: data.game_state.main_state_2.label
        Label:
            text: data.game_state.main_state_2.value
    StatusWidget:
        Label:
            text: data.game_state.main_state_3.label
        Label:
            text: data.game_state.main_state_3.value
    StatusWidget:
        Label:
            text: data.game_state.main_state_4.label
        Label:
            text: data.game_state.main_state_4.value


<StatusWidget@BoxLayout>:
    orientation: 'vertical'
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source: assets_file+ 'temp-pebble.png'


##################  CARD  ##################
<CardWidget@BoxLayout>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            id: card

            BoxLayout:
                size_hint_y: .2
                Label:
                    size_hint_x: .1
                    font_size: 24
                    text_size: (self.size[0]*.6, self.size[1])
                    center: root.center
                    text: "[b]" + data.active_card.text+ "[/b]"
                    halign: 'center'
                    markup: True


            BoxLayout:
                id: card_and_art
                BoxLayout:
                    canvas.before:
                        Rectangle:
                            pos: (self.pos[0]+(self.padding[0] ), self.pos[1]+(self.padding[1] ))
                            size: (self.size[0]-(self.padding[0] + self.padding[2]), self.size[1]-(self.padding[1] + self.padding[3]))
                            source: assets_file  + 'stone_tablet_2.png'
                    #         L    T    R     B
                    padding: (100, 20, 100, 10)
                    BoxLayout:
                        padding: (30, 90, 30, 110)
                        Image:
                            source: assets_file +data.active_card.card_image

        BoxLayout:
            size_hint:(1, .3)
            orientation: 'horizontal'
            padding: (50, 0)
            ChoiceButton:
                background_normal: assets_file + 'button_bg_left.png'
                text: data.active_card.options[0].text
                on_press: data.choice_handler('1')
            ChoiceButton:
                background_normal: assets_file + 'button_bg_right.png'
                text: data.active_card.options[1].text if len(data.active_card.options) > 1 else data.active_card.options[0].text
                on_press: data.choice_handler('2')


<ChoiceButton@Button>:
    line_height: 1.25
    font_size: 18
    center: root.center
    valign: 'center'
    halign: 'center'
    text_size: self.size
