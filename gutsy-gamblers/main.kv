#:kivy 1.11.1

<MainScreen>
    canvas:
        Rotate:
            angle: 0
            origin: self.center

	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height

		Label:
			text: "Well would you lookee here!"

		Label:
			text: "We've got ourselves a project base!"

        Button:
            text:"Submit"
            on_press: root.settings_button()

<DialTestScreen>
    FloatLayout:
        Label:
            text: "Wanker"

<NowMarker>:
	Image:
		source: 'assets/arrow_marker.png'
		size_hint: None, None
		size: 75, 75
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<SunRise>:
    rot_angle: 0

    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rot_angle
            origin: self.center
    canvas.after:
        PopMatrix

	Image:
		source: 'assets/sun_rise.png'
		size_hint: 0.05, 0.05
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<SunSet>:
    rot_angle: 0

    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rot_angle
            origin: self.center
    canvas.after:
        PopMatrix

	Image:
		source: 'assets/sun_set.png'
		size_hint: 0.05, 0.05
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<DialWidget>:
    dial_file: ''
    dial_size: (0, 0)

	canvas.before:
		PushMatrix
		Rotate:
			angle: root.angle
			axis: 0, 0, 1
			origin: (self.width / 2, self.height / 2)

	canvas.after:
		PopMatrix

	Image:
	    source: root.dial_file
		size_hint: root.dial_size
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}

