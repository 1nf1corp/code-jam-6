#:kivy 1.11.1

<MainScreen>
	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height

		Label:
			text: "Well would you lookee here!"

		Label:
			text: "We've got ourselves a project base!"

        Button:
            text:"Submit"
            on_press: root.settings_button()

<NowMarker>:
	Image:
		source: 'assets/arrow_marker.png'
		size_hint: None, None
		size: 75, 75
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<RotatingWidget>:
	canvas.before:
		PushMatrix
		Rotate:
			angle: root.angle
			axis: 0, 0, 1
			origin: (self.width / 2, self.height / 2)
		Color:
			rgb: (1, 1, 1)
		Ellipse:
			size: 500, 500
			pos: self.width / 2 - 250, self.height / 2 - 250


		Color:
			rgb: (0, 0, 0)
		Ellipse:
			size: 460, 460
			pos: self.width / 2 - 230, self.height / 2 - 230

		Color:
			rgb: (1, 1, 1)
		Ellipse:
			size: 440, 440
			pos: self.width / 2 - 220, self.height / 2 - 220

	canvas.after:
		PopMatrix

#	Image:
#		size_hint: None, None
#		size: 500, 500
#		pos_hint: {'center_x': 0.5, 'center_y': 0}

	Label:
		color: 0, 0, 0, 1
		text: 'The Sun'
		pos_hint: {'center_x': 0.5, 'center_y': 0.1}

	Label:
		color: 0, 0, 0, 1
		text: 'The Moon'
		pos_hint: {'center_x': 0.5, 'center_y': 0.9}