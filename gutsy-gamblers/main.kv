#:kivy 1.11.1

<NowMarker>:
	Image:
		source: 'assets/arrow_marker.png'
		size_hint: None, None
		size: 75, 75
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<SunRiseMarker>:
    rot_angle: 0

    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rot_angle
            origin: self.center
    canvas.after:
        PopMatrix

	Image:
		source: 'assets/sun_rise.png'
		size_hint: 0.05, 0.05
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<SunSetMarker>:
    rot_angle: 0

    canvas.before:
        PushMatrix
        Rotate:
            angle: root.rot_angle
            origin: self.center
    canvas.after:
        PopMatrix

	Image:
		source: 'assets/sun_set.png'
		size_hint: 0.05, 0.05
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}

<DialWidget>:
    dial_file: ''
    dial_size: (0, 0)

	canvas.before:
		PushMatrix
		Rotate:
			angle: root.angle
			axis: 0, 0, 1
			origin: (self.width / 2, self.height / 2)

	canvas.after:
		PopMatrix

	Image:
	    source: root.dial_file
		size_hint: root.dial_size
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<DialEffectWidget>:
    shade_size: (0, 0)
	size: 1, 1
	pos: (self.width / 2) - (root.shade_size[0] / 2), (self.height / 2) - (root.shade_size[1] / 2)

    on_size: root._pos_check()

<SunShading>:
    shade_size: (0, 0)
    shade_angle_start: 0
    shade_angle_stop: 0

    on_size: root._size_check()

    canvas:
        Color:
            rgba: 0, 0.1, 0.2, 1

        Ellipse:
            id: shade
            size: root.shade_size
            angle_start: root.shade_angle_start
            angle_end: root.shade_angle_stop
            pos: 0, 0

