<DeletePopup>:
    title: 'Delete Currently Selected Files/Dirs?'
    FloatLayout:
        Label:
            id: left
            size_hint: .5,.1
            pos_hint: {'center_x': .5, 'center_y': .7}
            font_size: 14
            color: 0.34,1,1,1
        Label:
            id: right
            size_hint: .5,.1
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: 14
            color: 0.34,1,1,1
        Button:
            id: yes
            size_hint: .2,.2
            pos_hint: {'center_x': .4, 'center_y': .3}
            font_size: 14
            text: '[ YES ]'
            color: 0.34,1,1,1
            on_press: root.delete()
        Button:
            id: no
            size_hint: .2,.2
            pos_hint: {'center_x': .6, 'center_y': .3}
            font_size: 14
            text: '[ NO ]'
            color: 0.34,1,1,1
            on_press: root.dismiss()


