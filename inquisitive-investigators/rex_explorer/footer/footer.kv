#:kivy 1.11.1
#:import FONT rex_explorer.utils.paths.FONT
#:import BUTTON rex_explorer.utils.paths.BUTTON

<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        size_hint: 1,1
        text: '1: About'
        font_size: 12.5
        on_press: root.about()
    Button:
        size_hint: 1,1
        text: '2: Edit'
        font_size: 12.5
        on_press: root.edit()
    Button:
        size_hint: 1,1
        text: '3: Copy'
        font_size: 12.5
        on_press: root.copy()
    Button:
        size_hint: 1,1
        text: '4: DWN'
        font_size: 12.5
        on_press: root.down()
    Button:
        size_hint: 1,1
        text: '5: UP'
        font_size: 12.5
        on_press: root.up()
    Button:
        size_hint: 1,1
        text: '6: Mkdir'
        font_size: 12.5
        on_press: root.mkdir()
    Button:
        size_hint: 1,1
        text: '7: Create'
        font_size: 12.5
        on_press: root.create()
    Button:
        size_hint: 1,1
        text: '8: Delete'
        font_size: 12.5
        on_press: root.delete()
    Button:
        size_hint: 1,1
        text: '9: Rename'
        font_size: 12.5
        on_press: root.rename()
    Button:
        size_hint: 1,1
        text: '0: Quit'
        font_size: 12.5
        on_press: root.quit()

<AboutPopup>:
    title: 'About Rex Explorer'
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            effect_cls: "ScrollEffect"
            Label:
                id: AboutInfo
                size_hint_y: None
                height: self.texture_size[1]
                text_size: (self.width-20), None
                line_height: 1.5
                valign: "top"
                color: 0.34,1,1,1
                font_size: 14
        Button:
            text: "[ Close ]"
            font_size: 14
            size_hint_y: None
            height: "40dp"
            on_press: root.dismiss()
            color: 0.34,1,1,1

<CopyPopup>:
    title: 'Copy a file or directory'

    FloatLayout:

        Label:
            text: 'Copy from:'
            pos_hint: {'center_x': .5, 'center_y': .9}
            font_size: 13

        Button:
            id: top_left
            canvas:
                Color:
                    rgba: 0, 0, 0, root.top_left
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: .3,.1
            pos_hint: {'center_x': .3, 'center_y': .7}
            text: '[ Left Browser ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.select('from', 'left')

        Button:
            id: top_right
            canvas:
                Color:
                    rgba: 0, 0, 0, root.top_right
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: .3,.1
            pos_hint: {'center_x': .7, 'center_y': .7}
            text: '[ Right Browser ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.select('from', 'right')

        Label:
            text: 'Copy to:'
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: 13

        Button:
            id: bottom_left
            canvas:
                Color:
                    rgba: 0, 0, 0, root.bottom_left
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: .3,.1
            pos_hint: {'center_x': .3, 'center_y': .3}
            text: '[ Left Browser ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.select('to', 'left')

        Button:
            id: bottom_right
            canvas:
                Color:
                    rgba: 0, 0, 0, root.bottom_right
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: .3,.1
            pos_hint: {'center_x': .7, 'center_y': .3}
            text: '[ Right Browser ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.select('to', 'right')

        Button:
            size_hint: .3,.1
            pos_hint: {'center_x': .6, 'center_y': .1}
            text: '[ Copy ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.copy()

        Button:
            size_hint: .3,.1
            pos_hint: {'center_x': .4, 'center_y': .1}
            text: '[ Cancel ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.dismiss()

<EditPopup>:
    title: 'Edit a file'
    FloatLayout:
        Button:
            id: left
            canvas:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: .3,.1
            pos_hint: {'center_x': .3, 'center_y': .7}
            text: '[ Left Manager ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.edit('left')
        Button:
            id: right
            canvas:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: .3,.1
            pos_hint: {'center_x': .7, 'center_y': .7}
            text: '[ Right Manager ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.edit('right')

        Button:
            size_hint: .3,.1
            pos_hint: {'center_x': .5, 'center_y': .3}
            text: '[ Cancel ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.dismiss()

<Mkdir>:
    title: 'Make a new Directory?'
    FloatLayout:
        TextInput:
            id: create
            size_hint: .5,.15
            pos_hint: {'center_x': .5, 'center_y': .7}
            hint_text: 'Enter Directory Name'
        Button:
            id: left
            canvas:
                Color:
                    rgba: 0,0,0, root.left
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: .3,.1
            pos_hint: {'center_x': .3, 'center_y': .4}
            text: '[ Left Manager ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.buttonselect(1)
        Button:
            id: right
            canvas:
                Color:
                    rgba: 0,0,0, root.right
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: .3,.1
            pos_hint: {'center_x': .7, 'center_y': .4}
            text: '[ Right Manager ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.buttonselect(2)
        Button:
            size_hint: .3,.1
            pos_hint: {'center_x': .5, 'center_y': .25}
            text: '[ Create New Directory ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.mkdir(root.ids.create.text)
        Button:
            size_hint: .3,.1
            pos_hint: {'center_x': .5, 'center_y': .1}
            text: '[ Cancel ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.dismiss()

