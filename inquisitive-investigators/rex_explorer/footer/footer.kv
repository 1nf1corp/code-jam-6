<QuitPopup>:
    title: 'Quit?'
    FloatLayout:
        Label:
            size_hint: .5,.1
            pos_hint: {'center_x': .5, 'center_y': .7}
            color: 0.34,1,1,1
            text: 'Are you sure you want to Quit?'
            font_size: 14
        Button:
            id: yes
            size_hint: .2,.2
            pos_hint: {'center_x': .3, 'center_y': .5}
            text: '[ YES ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: quit(0)
        Button:
            id: no
            size_hint: .2,.2
            pos_hint: {'center_x': .7, 'center_y': .5}
            text: '[ NO ]'
            font_size: 14
            color: 0.34,1,1,1
            on_press: root.dismiss()

<Popup>:
    auto_dismiss: False
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: root.size[0] + 5, root.size[1] + 5
            pos: root.pos[0] - 2.5, root.pos[1] - 2.5
    seperator_color: 0.34,1,1
    title_color: 0.34,1,1,1
    title_align: 'center'
    title_font: FONT
    title_size: 14
    background_color: 0,0,0,0
    background: BUTTON

<TextInput>:
    font_name: FONT
    font_size: 14
    multiline: False
    background_color: 0,0,.65,1
    foreground_color: 0.34,1,1,1
    hint_text_color: 0.34,1,1,1
