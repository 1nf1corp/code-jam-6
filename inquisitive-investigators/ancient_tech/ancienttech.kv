#:kivy 1.11.1

<Main>:
    Footer:
        pos_hint: {'top': .05}
        size_hint: 1,.07
    FileMain:
        pos_hint: {'top': 1}
        size_hint: 1, .5

<FileMain>:
    canvas:
        Color:
            rgb: 0,1,0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'

    ScrollView:
        FileBrowser:
            id: left
            on_parent:
                self.generate('../')
                for d in self.dirs: self.generate(d)

    FileBrowser:
        id: right

<FileBrowser>:
    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'rl-tb'
    spacing: [0,0]

<SubBrowser>:
    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'rl-tb'
    spacing: [0,0]

<File>:
    size_hint: 1, .1

<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        text: '1: Help'
    Button:
        text: '2: Menu'
    Button:
        text: '3: View'
    Button:
        text: '4: Edit'
    Button:
        text: '5: Copy'
    Button:
        text: '6: PullDwn'
    Button:
        text: '7: PullUp'
    Button:
        text: '8: Mkdir'
    Button:
        text: '9: Delete'
    Button:
        text: '10: Quit'


<Button>:
    background_normal: ''
    background_color: (0,0,0,0)
