#:kivy 1.11.1

<Main>:
    Footer:
        pos_hint: {'top': .05}
        size_hint: 1,.07
    FileBrowser:
        pos_hint: {'top': 1}
        size_hint: .5,.8
    FileBrowser:
        pos_hint: {'top': 1,'right':1}
        size_hint: .5,.8



<FileBrowser>:
    canvas.before:
        Color:
            rgb: 1,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    ScrollView:
        size_hint: .98,.90
        pos_hint: {'x':.01,'y':.01}
        scroll_distance: 10
        Files:
            canvas.before:
                Color:
                    rgb: 0,0,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            height: self.minimum_height
            on_parent:
                self.generate('../')
                for d in self.dirs: self.generate(d)
<Files>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint_y: None

<File>:
    size_hint: 1, None

<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        text: '1: Help'
    Button:
        text: '2: Menu'
    Button:
        text: '3: View'
    Button:
        text: '4: Edit'
    Button:
        text: '5: Copy'
    Button:
        text: '6: PullDwn'
    Button:
        text: '7: PullUp'
    Button:
        text: '8: Mkdir'
    Button:
        text: '9: Delete'
    Button:
        text: '10: Quit'

<Button>:
    background_normal: ''
    background_color: (0,0,0,0)
