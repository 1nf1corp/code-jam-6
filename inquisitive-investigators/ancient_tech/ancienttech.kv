#:kivy 1.11.1

<Main>:
    Footer:
        pos_hint: {'top': .05}
        size_hint: 1,.07

    ScrollView:
        pos_hint: {'top': 1}
        size_hint: .5,.8
        scroll_distance: 10
        canvas.before:
            Color:
                rgb: 0,0,1
            Rectangle:
                size: self.size
                pos: self.pos
        FileBrowser:
            id: left
            height: self.minimum_height
            on_parent:
                for d in self.dirs: self.generate(d)

    ScrollView:
        pos_hint: {'top': 1, 'right':1}
        size_hint: .5,.8
        scroll_distance: 10
        canvas.before:
            Color:
                rgb: 0,0,1
            Rectangle:
                size: self.size
                pos: self.pos
        SubBrowser:
            id: left
            height: self.minimum_height
            on_parent:
                for d in self.dirs: self.generate(d)


<FileBrowser>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint_y: None

<SubBrowser>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint_y: None

<File>:
    size_hint: 1, None
    on_press: print(f'Pressed {self.text}')


<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        text: '1: Help'
    Button:
        text: '2: Menu'
    Button:
        text: '3: View'
    Button:
        text: '4: Edit'
    Button:
        text: '5: Copy'
    Button:
        text: '6: PullDwn'
    Button:
        text: '7: PullUp'
    Button:
        text: '8: Mkdir'
    Button:
        text: '9: Delete'
    Button:
        text: '10: Quit'


<Button>:
    background_normal: ''
    background_color: (0,0,0,0)
