#:kivy 1.11.1

<Main>:
    FileBrowser:
        pos_hint: {'top': 1}
        size_hint: .499,.8
    FileBrowser:
        pos_hint: {'top': 1,'right':1}
        size_hint: .499,.8
    Footer:
        pos_hint: {'top': .04}
        size_hint: 1,.04


<FileBrowser>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    FileHeader:
        id: header
        pos_hint: {'top':1,'x':.01}
        size_hint: .98,.1
    Column:
        size_hint: .446, .91
        pos_hint: {'top': .91, 'x': .01}
    Column:
        size_hint: .147, .91
        pos_hint: {'top': .91, 'x': .47}
    Column:
        size_hint: .14, .91
        pos_hint: {'top': .91, 'x': .635}
    Column:
        size_hint: .2, .91
        pos_hint: {'top': .91, 'x': .79}
    ScrollView:
        effect_cls: "ScrollEffect"
        size_hint: .98,.90
        pos_hint: {'x':.01,'y': 0}
        scroll_distance: 10
        Files:
            height: self.minimum_height
            on_parent:
                self.generate('<-')
                for d in self.dirs: self.generate(d)

<Column>:
    canvas.before:
        Color:
            rgb: 0,0,.65
        Rectangle:
            size: self.size
            pos: self.pos
<NewFile>:
    size_hint: 1, None
    FloatLayout:
        size: root.size
        pos: root.pos
        Label:
            id: name
            text_size: self.size
            halign: 'left'
            size_hint: .45, .3
            pos_hint: {'top': 1, 'x': 0.01}
            color: 0.34,1,1,1
        Label:
            id: type
            text_size: self.size
            halign: 'left'
            size_hint: .15, .3
            pos_hint: {'top': 1, 'x': 0.475}
            color: 0.34,1,1,1
        Label:
            id: size
            text_size: self.size
            halign: 'left'
            size_hint: .1, .25
            pos_hint: {'top': 1, 'x': .65}
            color: 0.34,1,1,1
        Label:
            id: date
            text_size: self.size
            halign: 'left'
            size_hint: .2, .3
            pos_hint: {'top': 1, 'x': .81}
            color: 0.34,1,1,1

<FileHeader>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Button:
        canvas.before:
            Color:
                rgb: 0,0,.65
            Rectangle:
                size: self.size
                pos: self.pos
        pos_hint: {'top':1, 'right':1}
        size_hint: 1,.4
        text: self.parent.current_dir
        color: 0.34,1,1,1
    FloatLayout:
        pos_hint: {'top':.5, 'right':1}
        size_hint: 1,.4
        Label:
            canvas.before:
                Color:
                    rgb: 0,0,.65
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': 0}
            size_hint: .455, 1
            text: 'Name'
        Label:
            canvas.before:
                Color:
                    rgb: 0,0,.65
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': .469}
            size_hint: .15, 1
            text: 'Type'
        Label:
            canvas.before:
                Color:
                    rgb: 0,0,.65
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': .638}
            size_hint: .142, 1
            text: 'Size'
        Label:
            canvas.before:
                Color:
                    rgb: 0,0,.65
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'right': 1}
            size_hint: .204, 1
            text: 'Date'

<Files>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint: 1, None


<AboutPopup>:
    title: 'About NAMEOFPROJECT'
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            effect_cls: "ScrollEffect"
            Label:
                id: AboutInfo
                size_hint_y: None
                height: self.texture_size[1]
                text_size: (self.width-20), None
                line_height: 1.5
                valign: "top"
        Button:
            text: "Close"
            size_hint_y: None
            height: "40dp"
            on_press: root.dismiss()


<QuitPopup>:
    title: 'Quit?'
    FloatLayout:
        Label:
            size_hint: .2,.1
            pos_hint: {'center_x': .5, 'center_y': .7}
            color: 0.34,1,1,1
            text: 'Are you sure you want to Quit?'
        Button:
            id: yes
            size_hint: .2,.1
            pos_hint: {'center_x': .3, 'center_y': .5}
            text: '[ YES ]'
            color: 0.34,1,1,1
            on_press: root.check(True)
        Button:
            id: no
            size_hint: .2,.1
            pos_hint: {'center_x': .7, 'center_y': .5}
            text: '[ NO ]'
            color: 0.34,1,1,1
            on_press: root.check(False)

<Popup>:
    auto_dismiss: False
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: root.size[0] + 5, root.size[1] + 5
            pos: root.pos[0] - 2.5, root.pos[1] - 2.5
    seperator_color: 0.34,1,1
    title_color: 0.34,1,1,1
    title_align: 'center'
    title_font: './ancient_tech/static/retro_font.ttf'

<ModalView@Popup>:
    background_color: 0,0,0,00

<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        text: '1:About'
        on_press: root.about()
    Button:
        text: '2:Menu'
    Button:
        text: '3:View'
    Button:
        text: '4:Edit'
    Button:
        text: '5:Copy'
    Button:
        text: '6:DWN'
    Button:
        text: '7:UP'
    Button:
        text: '8:Mkdir  '
    Button:
        text: '9:Delete'
    Button:
        text: '0:Quit'
        on_press: root.quit()

<Button>:
    font_name: './ancient_tech/static/retro_font.ttf'
    background_normal: ''
    background_color: (0,0,0,0)

<Label>:
    font_name: './ancient_tech/static/retro_font.ttf'

