#:kivy 1.11.1

<Main>:
    Footer:
        pos_hint: {'top': .05}
        size_hint: 1,.07
    FileBrowser:
        pos_hint: {'top': 1}
        size_hint: .5,.8
    FileBrowser:
        pos_hint: {'top': 1,'right':1}
        size_hint: .5,.8


<FileBrowser>:
    canvas.before:
        Color:
            rgb: 1,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    FileHeader:
        pos_hint: {'top':1,'x':.01}
        size_hint: .98,.1
    Column:
        size_hint: .382, .91
        pos_hint: {'top': .91, 'x': .01}
    Column:
        size_hint: .245, .91
        pos_hint: {'top': .91, 'x': .402}
    Column:
        size_hint: .333, .91
        pos_hint: {'top': .91, 'x': .657}
    ScrollView:
        size_hint: .98,.90
        pos_hint: {'x':.01,'y': 0}
        scroll_distance: 10

        Files:
            height: self.minimum_height
            on_parent:
                self.generate('../')
                for d in self.dirs: self.generate(d)

<Column>:
    canvas.before:
        Color:
            rgb: 0,0,1
        Rectangle:
            size: self.size
            pos: self.pos
<NewFile>:
    FloatLayout:
        size: root.size
        pos: root.pos
        Label:
            id: name
            size_hint: .39, .3
            pos_hint: {'top': 1, 'x': 0}
        Label:
            id: size
            size_hint: .25, .3
            pos_hint: {'top': 1, 'x': .4}
        Label:
            id: date
            size_hint: .36, .3
            pos_hint: {'top': 1, 'right': 1}

<FileHeader>:
    canvas.before:
        Color:
            rgb: 1,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Button:
        canvas.before:
            Color:
                rgb: 0,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        pos_hint: {'top':1, 'right':1}
        size_hint: 1,.4
        text: 'Current Directory Click to Copy'
    FloatLayout:
        pos_hint: {'top':.5, 'right':1}
        size_hint: 1,.4
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': 0}
            size_hint: .39, 1
            text: 'Name'
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': .4}
            size_hint: .25, 1
            text: 'Size'
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'right': 1}
            size_hint: .34, 1
            text: 'Date'

<Files>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint_y: None


<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        text: '1: Help'
    Button:
        text: '2: Menu'
    Button:
        text: '3: View'
    Button:
        text: '4: Edit'
    Button:
        text: '5: Copy'
    Button:
        text: '6: PullDwn'
    Button:
        text: '7: PullUp'
    Button:
        text: '8: Mkdir'
    Button:
        text: '9: Delete'
    Button:
        text: '10: Quit'

<Button>:
    background_normal: ''
    background_color: (0,0,0,0)
