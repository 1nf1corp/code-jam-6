#:kivy 1.11.1

<Main>:
    Footer:
        pos_hint: {'top': .05}
        size_hint: 1,.07
    FileBrowser:
        pos_hint: {'top': 1}
        size_hint: .5,.8
    FileBrowser:
        pos_hint: {'top': 1,'right':1}
        size_hint: .5,.8


<FileBrowser>:
    canvas.before:
        Color:
            rgb: 1,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    FileHeader:
        pos_hint: {'top':1,'x':.01}
        size_hint: .98,.1
    Column:
        size_hint: .445, .91
        pos_hint: {'top': .91, 'x': .01}
    Column:
        size_hint: .146, .91
        pos_hint: {'top': .91, 'x': .47}
    Column:
        size_hint: .14, .91
        pos_hint: {'top': .91, 'x': .635}
    Column:
        size_hint: .2, .91
        pos_hint: {'top': .91, 'x': .79}

    ScrollView:
        size_hint: .98,.90
        pos_hint: {'x':.01,'y': 0}
        scroll_distance: 10

        Files:
            height: self.minimum_height
            on_parent:
                self.generate('../')
                for d in self.dirs: self.generate(d)

<Column>:
    canvas.before:
        Color:
            rgb: 0,0,1
        Rectangle:
            size: self.size
            pos: self.pos
<NewFile>:
    FloatLayout:
        size: root.size
        pos: root.pos
        Label:
            id: name
            text_size: self.size
            halign: 'left'
            size_hint: .45, .3
            pos_hint: {'top': 1, 'x': 0.01}
        Label:
            id: type
            text_size: self.size
            halign: 'left'
            size_hint: .15, .3
            pos_hint: {'top': 1, 'x': 0.47}
        Label:
            id: size
            text_size: self.size
            halign: 'left'
            size_hint: .1, .25
            pos_hint: {'top': 1, 'x': .65}
        Label:
            id: date
            text_size: self.size
            halign: 'left'
            size_hint: .2, .3
            pos_hint: {'top': 1, 'x': .81}

<FileHeader>:
    canvas.before:
        Color:
            rgb: 1,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Button:
        canvas.before:
            Color:
                rgb: 0,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        pos_hint: {'top':1, 'right':1}
        size_hint: 1,.4
        text: 'Current Directory Click to Copy'
    FloatLayout:
        pos_hint: {'top':.5, 'right':1}
        size_hint: 1,.4
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': 0}
            size_hint: .455, 1
            text: 'Name'
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': .469}
            size_hint: .15, 1
            text: 'Type'
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'x': .638}
            size_hint: .142, 1
            text: 'Size'
        Label:
            canvas.before:
                Color:
                    rgb: 0,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {'top': 1, 'right': 1}
            size_hint: .204, 1
            text: 'Date'

<Files>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint_y: None


<Footer>:
    canvas:
        Color:
            rgb: 0.3,0.4,0.5
        Rectangle:
            size: root.size
            pos: root.pos
    orientation: 'horizontal'

    Button:
        text: '1: Help'
    Button:
        text: '2: Menu'
    Button:
        text: '3: View'
    Button:
        text: '4: Edit'
    Button:
        text: '5: Copy'
    Button:
        text: '6: PullDwn'
    Button:
        text: '7: PullUp'
    Button:
        text: '8: Mkdir'
    Button:
        text: '9: Delete'
    Button:
        text: '10: Quit'

<Button>:
    background_normal: ''
    background_color: (0,0,0,0)

<Label>:
    _scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self._scale or 1.
            y: self._scale or 1.
    canvas.after:
        PopMatrix