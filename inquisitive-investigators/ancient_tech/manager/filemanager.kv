#:kivy 1.11.1

<FileBrowser>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    FileHeader:
        id: header
        pos_hint: {'top':1,'x':.01}
        size_hint: .98,.1
    Column:
        size_hint: .446, .91
        pos_hint: {'top': .91, 'x': .01}
    Column:
        size_hint: .147, .91
        pos_hint: {'top': .91, 'x': .47}
    Column:
        size_hint: .14, .91
        pos_hint: {'top': .91, 'x': .635}
    Column:
        size_hint: .2, .91
        pos_hint: {'top': .91, 'x': .79}
    RV:
        viewclass: 'NewFile'
        effect_cls: "ScrollEffect"
        size_hint: .98,.90
        pos_hint: {'x':.01,'y': 0}
        scroll_distance: 10
        RecycleGridLayout:
            default_size: None, dp(35)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            cols: 1


<NewFile>:
    name: ''
    type: ''
    size_: ''
    date: ''
    canvas:
        Color:
            rgba: 1,1,1,self.a
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        size: root.size
        pos: root.pos
        FileInfo:
            id: name
            size_hint: .45, 1
            pos_hint: {'top': 1, 'x': 0.01}
            text: root.name
        FileInfo:
            id: type
            size_hint: .15, 1
            pos_hint: {'top': 1, 'x': 0.475}
            text: root.type
        FileInfo:
            id: size
            size_hint: .1, 1
            pos_hint: {'top': 1, 'x': .65}
            text: root.size_
        FileInfo:
            id: date
            size_hint: .2, 1
            pos_hint: {'top': 1, 'x': .81}
            text: root.date

<FileHeader>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Label:
        canvas.before:
            Color:
                rgb: 0,0,.65
            Rectangle:
                size: self.size
                pos: self.pos
        pos_hint: {'top':1, 'right':1}
        size_hint: 1,.4
        color: 0.34,1,1,1
        text: self.parent.current_dir
    FloatLayout:
        pos_hint: {'top':.5, 'right':1}
        size_hint: 1,.4
        Header:
            pos_hint: {'top': 1, 'x': 0}
            size_hint: .455, 1
            text: 'Name'
        Header:
            pos_hint: {'top': 1, 'x': .469}
            size_hint: .15, 1
            text: 'Type'
        Header:
            pos_hint: {'top': 1, 'x': .638}
            size_hint: .142, 1
            text: 'Size'
        Header:
            pos_hint: {'top': 1, 'right': 1}
            size_hint: .204, 1
            text: 'Date'

<FileInfo>:
    text_size: self.size
    color: 0.34,1,1,1
    halign: 'left'
    valign: 'center'

<Column>:
    canvas.before:
        Color:
            rgb: 0,0,.65
        Rectangle:
            size: self.size
            pos: self.pos

<Header>:
    canvas.before:
        Color:
            rgb: 0,0,.65
        Rectangle:
            size: self.size
            pos: self.pos