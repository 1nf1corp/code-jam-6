#:kivy 1.11.1

<FileBrowser>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    FileHeader:
        id: header
        pos_hint: {'top':1,'x':.01}
        size_hint: .98,.1
    Column:
        size_hint: .446, .91
        pos_hint: {'top': .91, 'x': .01}
    Column:
        size_hint: .147, .91
        pos_hint: {'top': .91, 'x': .47}
    Column:
        size_hint: .14, .91
        pos_hint: {'top': .91, 'x': .635}
    Column:
        size_hint: .2, .91
        pos_hint: {'top': .91, 'x': .79}
    ScrollView:
        effect_cls: "ScrollEffect"
        size_hint: .98,.90
        pos_hint: {'x':.01,'y': 0}
        scroll_distance: 10
        Files:
            height: self.minimum_height
            on_parent:
                self.generate('<-')
                for d in self.dirs: self.generate(d)

<NewFile>:
    size_hint: 1, None
    FloatLayout:
        size: root.size
        pos: root.pos
        FileInfo:
            id: name
            size_hint: .45, .3
            pos_hint: {'top': 1, 'x': 0.01}
        FileInfo:
            id: type
            size_hint: .15, .3
            pos_hint: {'top': 1, 'x': 0.475}
        FileInfo:
            id: size
            size_hint: .1, .25
            pos_hint: {'top': 1, 'x': .65}
        FileInfo:
            id: date
            size_hint: .2, .3
            pos_hint: {'top': 1, 'x': .81}

<FileHeader>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Label:
        canvas.before:
            Color:
                rgb: 0,0,.65
            Rectangle:
                size: self.size
                pos: self.pos
        pos_hint: {'top':1, 'right':1}
        size_hint: 1,.4
        text: self.parent.current_dir
        color: 0.34,1,1,1
    FloatLayout:
        pos_hint: {'top':.5, 'right':1}
        size_hint: 1,.4
        Header:
            pos_hint: {'top': 1, 'x': 0}
            size_hint: .455, 1
            text: 'Name'
        Header:
            pos_hint: {'top': 1, 'x': .469}
            size_hint: .15, 1
            text: 'Type'
        Header:
            pos_hint: {'top': 1, 'x': .638}
            size_hint: .142, 1
            text: 'Size'
        Header:
            pos_hint: {'top': 1, 'right': 1}
            size_hint: .204, 1
            text: 'Date'

<FileInfo>:
    text_size: self.size
    color: 0.34,1,1,1
    halign: 'left'

<Files>:
    size: root.size
    pos: root.pos
    orientation: 'rl-tb'
    spacing: [0,-70]
    size_hint: 1, None

<Column>:
    canvas.before:
        Color:
            rgb: 0,0,.65
        Rectangle:
            size: self.size
            pos: self.pos

<Header>:
    canvas.before:
        Color:
            rgb: 0,0,.65
        Rectangle:
            size: self.size
            pos: self.pos