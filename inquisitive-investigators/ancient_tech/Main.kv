#:kivy 1.11.1

<Main>:
    FileBrowser:
        pos_hint: {'top': 1}
        size_hint: .499,.8
    FileBrowser:
        pos_hint: {'top': 1,'right':1}
        size_hint: .499,.8
    Border:
        pos_hint: {'top': .2}
        size_hint: 1,.01
    Terminal:
        pos_hint: {'top': .19}
        size_hint: 1,.15
    Footer:
        pos_hint: {'top': .04}
        size_hint: 1,.04


<Button>:
    font_name: './ancient_tech/static/retro_font.ttf'
    background_normal: ''
    background_color: (0,0,0,0)

<Label>:
    font_name: './ancient_tech/static/retro_font.ttf'

<Border>:
    canvas.before:
        Color:
            rgb: 0.34,1,1
        Rectangle:
            size: root.size
            pos: root.pos