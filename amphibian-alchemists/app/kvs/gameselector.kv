<SelectableLabel>:
    color: 0,0,0,1
    canvas.before:
        Color:
            rgba: (0, 0.6, 1, 1) if self.selected else (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<GameSelectorScreen>:
    name: "game_selector_screen"
    canvas:
        Color:
            rgba: 135 / 255, 73 / 255, 31 / 255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rv: rv
    AnchorLayout:
        anchor_y: "top"
        GridLayout:
            cols: 3
            rows: 1
            size_hint_y: 0.2
            padding: dp(8)
            spacing: dp(16)
            Button:
                text: "Go back"
                on_release: root.manager.current = "main_screen"
            Button:
                text: "Load game"
                on_release: root.manager.current = "game_screen"
            Button:
                text: "New game"
                on_release: root.manager.current = "game_screen"

    AnchorLayout:
        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(12)
            viewclass: "SelectableLabel"
            size_hint: 0.8, 0.5
            SelectableRecycleBoxLayout:
                default_size: None, dp(70)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"
                spacing: dp(2)
