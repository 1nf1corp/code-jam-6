<SelectableLabel@RecycleDataViewBehavior+Label>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<GameSelectorScreen>:
    name: "game_selector_screen"
    canvas:
        Color:
            rgba: 135 / 255, 73 / 255, 31 / 255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rv: rv
    orientation: "vertical"
    BoxLayout:
        cols: 3
        rows: 1
        size_hint_y: None
        height: dp(108)
        padding: dp(8)
        spacing: dp(16)
        Button:
            text: "Go back"
            on_release: root.manager.current = "main_screen"
        Button:
            text: "Load game"
            on_release: root.load_game
        Button:
            text: "New game"
            on_release: root.start_new_game

    SelectableRecycleBoxLayout:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(12)
        viewclass: "SelectableLabel"
