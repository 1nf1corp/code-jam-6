<CheckBox@ToggleButtonBehavior+Image>:
    on_state:
        self.source = "atlas://data/images/defaulttheme/checkbox_on" if self.state == "down" else "atlas://data/images/defaulttheme/checkbox_off"

<SettingsScreen>:
    name: "settings_screen"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        Button:
            size_hint: 0.1, 0.1
            text: "Go Back"
            on_release: root.manager.current = "main_screen"
    AnchorLayout:
        GridLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            canvas:
                Color:
                    rgba: 120 / 255, 68 / 255, 33 / 255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            cols: 2
            size_hint: 0.7, 0.7
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Allow Fullscreen"
                Label:
                    text: "Auto save when closing the game"
            BoxLayout:
                orientation: "vertical"
                CheckBox:
                CheckBox:
