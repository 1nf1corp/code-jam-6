<GameScreen>:
    name: "game_screen"
    AnchorLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.75, 0.7
            Button:
                size_hint_y: 0.2
                text: "Rotors"
                on_release: root.manager.current = "rotor"
            EnigmaKeyboard:
                id: enigma_keyboard
    AnchorLayout:
        anchor_y: "bottom"
        Button:
            text: "plugboard"
            size_hint: 0.75, 0.15
            on_release: root.manager.current = "plugboard_screen"
