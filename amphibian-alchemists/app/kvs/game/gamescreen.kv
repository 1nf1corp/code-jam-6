<GameMenuPopup@Popup>:
    title: "Select..."
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Save Progress to Fallback to"
            on_release:
                root.dismiss()
        Button:
            text: "Exit"
            on_release: root.dismiss()

<GameScreen>:
    name: "game_screen"
    AnchorLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.75, 0.7
            Button:
                size_hint_y: 0.2
                text: "Rotors"
                on_release: root.manager.current = "rotor"
            EnigmaKeyboard:
                id: enigma_keyboard
    AnchorLayout:
        anchor_x : "left"
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Menu"
                size_hint: 0.1, 0.1
                on_release: Factory.GameMenuPopup().open()
            Button:
                text: "paper"
                size_hint: 0.1, 1
                on_release: root.manager.current = "paper"
    AnchorLayout:
        anchor_x : "right"
        Button:
            text: "Output paper"
            size_hint: 0.1, 1
            on_release: root.manager.current = "paper"
    AnchorLayout:
        anchor_y: "bottom"
        Button:
            text: "plugboard"
            size_hint: 0.75, 0.15
            on_release: root.manager.current = "plugboard"
