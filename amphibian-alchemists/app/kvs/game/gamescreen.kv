<GameTitlePopup@Popup>:
    title: "There is already a default"
    size_hint: 0.5, 0.25
    BoxLayout:
        spacing: dp(5)
        orientation: "vertical"
        TextInput:
            id: game_title_input
            size_hint_y: None
            height: self.minimum_height
            multiline: False
            hint_text: "Best game ever..."
        BoxLayout:
            Button:
                text: "Save game title"
                on_press: app.root.get_screen("game_screen").button_press_positive()
                on_release:
                    app.root.get_screen("game_screen").change_game_title(self, game_title_input.text)
                    root.dismiss()
            Button:
                text: "Cancel"
                on_press: app.root.get_screen("game_screen").button_press_negative()
                on_release: root.dismiss()

<GameMenuPopup@Popup>:
    title: "Select..."
    size_hint: 0.5, 0.5
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Give this current game a title"
            on_press: app.root.get_screen("game_screen").button_press_positive()
            on_release: Factory.GameTitlePopup().open()
        Button:
            text: "Save a copy of current progress"
            on_press: app.root.get_screen("game_screen").button_press_positive()
            on_release:
                app.root.get_screen("game_screen").save_game()
                root.dismiss()
        Button:
            text: "Load old copy (WARNING: Overrides current progress!)"
            on_press: app.root.get_screen("game_screen").button_press_positive()
            on_release:
                app.root.get_screen("game_screen").load_old_game()
                root.dismiss()
        Button:
            text: "Close"
            on_press: app.root.get_screen("game_screen").button_press_negative()
            on_release:
                root.dismiss()
        Button:
            text: "Exit to Main Menu"
            on_press: app.root.get_screen("game_screen").button_press_negative()
            on_release:
                app.root.current = "main_screen"
                root.dismiss()

<GameScreen>:
    name: "game_screen"
    AnchorLayout:
        anchor_y: "top"
        padding: dp(10)
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.75
            RelativeLayout:
                size_hint_y: 0.575
                RotorDisplay:
                Button:
                    on_press: app.root.get_screen("game_screen").button_press_swoosh()
                    background_color: 0, 0, 0, 0
                    on_release: root.manager.current = "rotor_screen"
            EnigmaKeyboard:
                id: enigma_keyboard
            RelativeLayout:
                size_hint_y: 0.2
                PlugBoardModified:
                    canvas.before:
                        Color:
                            rgba: 16 / 255, 16 / 255, 16 / 255, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    on_press: app.root.get_screen("game_screen").button_press_swoosh()
                    background_color: 0, 0, 0, 0
                    on_release: root.manager.current = "plugboard_screen"
    AnchorLayout:
        anchor_y : "top"
        anchor_x : "left"
        Button:
            text: "Menu"
            size_hint: 0.1, 0.1
            on_press: app.root.get_screen("game_screen").button_press_positive()
            on_release: Factory.GameMenuPopup().open()
    CheckPaper:
