<PlugboardScreen>
    name: "plugboard_screen"
    FloatLayout:
        id: floating_widgets
        get_a_plug: get_a_plug
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            BoxLayout:
                size_hint_y: 0.1
                Button:
                    size_hint_x: 0.5
                    text: "Go back!"
                    on_release: root.manager.current = "game_screen"
                Button:
                    text: "Get a plug"
                    id: get_a_plug
                    on_release: root.get_plug()
                Button:
                    text: "Plug resume"
                    on_release: Factory.PlugResume().open()
                Label:
                    id: remove_plug
                    text: ""

        AnchorLayout:
            padding: dp(30)
            PlugBoard:
                size_hint: 0.7, 0.7
                id: plug_board
