<Wire@Widget>:
    points: []
    color: [0, 0, 0]
    canvas:
        Color:
            rgb: root.color or [0, 0, 0]
            a: 0.5
        Line:
            points: root.points
            width: 5

<PlugResume@Popup>:
    size_hint: 0.5, 0.5
    title: "Plugs resume"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            rows: 2
            BoxLayout:
                size_hint_y: 0.5
                Label:
                    text: "Pair of plugs:"
                Label:
                    text: "Number of plugs in screen:"
            BoxLayout:
                # TODO: fix label position (try to put it to the top)
                ScrollView:
                    Label:
                        size_hint_y: None
                        height: self.texture_size[1]
                        text: "\n".join(app.root.get_screen("plugboard_screen").wires)
                Label:
                    text: str(app.root.get_screen("plugboard_screen").plugs_in_screen)
        BoxLayout:
            size_hint: 0.3, 0.3
            pos_hint: {"center_x": 0.5}
            Button:
                text: "Close"
                on_release: root.dismiss()

<Plug@DragBehavior+Image>:
    plugged_in: ""
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 0
    size_hint: 0.1, 0.1
    source: "misc/plug.png"
    on_touch_move: app.root.get_screen("plugboard_screen").handle_wire_pos(*args)
    on_touch_up: app.root.get_screen("plugboard_screen").handle_touch_up(*args)
    on_plugged_in: app.root.get_screen("plugboard_screen").on_plugged_in(*args)

<PlugHole@ButtonBehavior+Image>:
    source: "misc/ports.png"
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    on_center: app.root.get_screen("plugboard_screen").on_plughole_recenter(*args)

