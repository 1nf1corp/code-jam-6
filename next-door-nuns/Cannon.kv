FloatLayout:
    Cannon:
        id: cannon

    Image:
        id: image
        source: 'cannon.png'
        # pos: self.parent.pos
        size_hint: .2,.2
        canvas.before:
            PushMatrix
            Rotate:
                angle: cannon.angle_int_deg
                origin: self.center
        canvas.after:
            PopMatrix

    Button:
        text: "Fire!"
        size_hint: (0.2, 0.1)
        pos_hint: {"x": 0.0, "y":0.5}
        on_press:
            root.ids.cannon.fire_cannon()
    Label:
        text: "Enter Velocity Here:"
        size_hint: (0.3, 0.1)
        pos_hint: {"x":0.0, "y":0.8}

    TextInput:
        id: velocity
        size_hint: (0.3, 0.1)
        pos_hint: {"x": 0.0, "y":0.7}

    Label:
        text: "Enter Initial Angle Here (degrees):"
        size_hint: (0.3,0.1)
        pos_hint: {"x":0.6,"y":0.8}

    TextInput:
        id: angle
        size_hint: (0.3, 0.1)
        pos_hint: {"x": 0.6, "y":0.7}
    Button:
        text: "Submit"
        size_hint: (0.2, 0.1)
        pos_hint: {"x": 0.0, "y":0.9}
        on_press:
            root.ids.cannon.set_velocity(root.ids.velocity.text)
            root.ids.velocity.text = ""
            root.ids.cannon.set_angle(root.ids.angle.text)



